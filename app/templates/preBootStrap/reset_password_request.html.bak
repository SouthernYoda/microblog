{% extends "base.html" %}

{% block content %}
	<h1> Reset Password</h1>
	<form action="" method="post">
		{{ form.hidden_tag() }}
		<p>
			{{ form.email.label }}
			{{ form.email(size=64) }}
			{% for error in form.email.errors %}
				<span style="color:red;">[{{ error }}]</span>
			{% endfor %}
		</p>
	</form>
	
	<p>The email is {{ email }} and password: {{ password }}</p>
{% endblock %}